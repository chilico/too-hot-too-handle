<div class="background">
  <div class="container contianer-show">

    <%# back link %>
    <div class="row">
      <div class="col-12 my-4">
        <p><%= link_to "< Continue Shopping", chillis_path, class: "styling-for-links" %></p>
      </div>
    </div>

    <%# main wrapper %>
    <div class="row justify-content-center">
      <div class="col-8">
        <h2>Your Basket</h2>
        <div class="basket-container gradient-background d-flex flex-column align-items-center pt-3">
          <% @sale.chillis.all.each do |chilli| %>
            <div class="w-75">
              <%= link_to chilli, class: "card-link col-8 col-xl-3 nopadding m-3" do %>
                <div class="basket-card-product d-flex justify-content-between align-items-start">
                  <%= cl_image_tag chilli.photos.first.key %>
                  <div class="d-flex justify-content-between align-items-start w-100 ps-3">
                    <h2><%= chilli.variety %></h2>
                    <h2>£<%= number_with_precision(chilli.price, precision: 2) %></h2>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
          <% if @sale.chillis.all.count > 0 %>
            <hr class="hr-black">
            <div class="d-flex justify-content-between w-75">
              <p>Shipping</p>
              <p><%# TO DO %>£3.00</p>
            </div>
            <div class="d-flex justify-content-between w-75">
              <h2>TOTAL</h2>
              <h2><%= humanized_money_with_symbol((@sale.price_cents + 3) / 100.0) %></h2>
            </div>
              <%= link_to 'Checkout', update_basket_path(@sale), data: {turbo_method: 'PATCH'}, class: "btn btn-lg btn-outline-dark text-light rounded-pill my-4 px-4" %>
          <% else %>
            <div class="d-flex justify-content-center w-75 pb-3 ">
              <h2>Your basket is Empty!</h2>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
