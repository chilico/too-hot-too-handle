<div class="container w-25 mt-4">
  <h2 class="mt-5 mb-1">Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", class:"chilli-input" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password", class:"chilli-input" } %>
      <%# <%= f.input :remember_me, input_html: { style:"color: white;" }, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions justify-content-center">
      <%= f.button :submit, "Log in", class:"btn btn-orange px-4 mt-3 mb-4" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
