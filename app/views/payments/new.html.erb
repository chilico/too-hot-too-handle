<div class="container">
  <div class="row py-4">
    <div class="col-md-3"><%= image_tag @sale.chillis.first.photos.first, width: '100%' %></div>
    <div class="col">
      <h1>Checkout summary</h1>
      <p>Purchase of Order No. <%= current_user.sales.where(status: 'basket').first.sale_sku.split('_')[2] %> for <strong><%= humanized_money_with_symbol(@sale.price) %></strong></p>
      <button id="pay" class="btn btn-primary">Pay</button>
      <script src="https://js.stripe.com/v3/"></script>
      <script>
        const paymentButton = document.getElementById('pay');
        paymentButton.addEventListener('click', () => {
          const stripe = Stripe('<%= ENV['STRIPE_PUBLISHABLE_KEY'] %>');
          stripe.redirectToCheckout({
            sessionId: '<%= @sale.checkout_session_id %>'
          });
        });
      </script>
    </div>
  </div>
</div>
